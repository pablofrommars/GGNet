@inherits Tooltip

@if (visibility)
{
    <defs>
        <style type="text/css">

            #@(Id) [role^="tooltip"] {
                --tooltip-color: @color;
                --tooltip-opacity: @opacity;
                --tooltip-theme-color: @themeColor;
                --tooltip-theme-opacity: @themeOpacity;

                --tooltip-fadein-duration: 500ms;

                overflow: visible;
            }

                #@(Id) [role^="tooltip"] + div {
                    position: relative;
                    pointer-events: none;
                }

                #@(Id) [role^="tooltip"] .bubble {
                    position: absolute;
                    border-radius: 4px;
                    padding: 2px 4px;
                    background: var(--tooltip-theme-color);
                    white-space: nowrap;
                    pointer-events: none;
                    color: @(Style.Tooltip.Text.Color);
            font-size: @(Style.Tooltip.Text.FontSize);
                }

            @@keyframes fadein {
                from {
                    opacity: 0;
                }

                to {
                    opacity: var(--tooltip-theme-opacity);
                }
            }

            #@(Id) [role^="tooltip"] .bubble {
                top: 50%;
                transform: translateY(-50%);
                animation: fadein var(--tooltip-fadein-duration) linear forwards;
            }

            #@(Id) [role^="tooltip-left"] .bubble {
                right: calc(100% + 2px);
            }

            #@(Id) [role^="tooltip-right"] .bubble {
                left: calc(100% + 2px);
            }
        </style>
    </defs>

    @((MarkupString)foreignObject!)
}
